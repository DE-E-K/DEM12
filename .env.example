# ── PostgreSQL ────────────────────────────────────────────────
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=sales
POSTGRES_USER=sales_user
POSTGRES_PASSWORD=change_me_postgres

# ── Airflow ───────────────────────────────────────────────────
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow_user:change_me_airflow@postgres:5432/airflow
AIRFLOW__CORE__FERNET_KEY=change_me_32_byte_fernet_key_base64==
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=false
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__WEBSERVER__SECRET_KEY=change_me_webserver_secret
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=change_me_admin
AIRFLOW_ADMIN_EMAIL=admin@example.com

# ── MinIO ─────────────────────────────────────────────────────
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_me_minio
MINIO_ENDPOINT=http://minio:9000
MINIO_RAW_BUCKET=raw-data
MINIO_PROCESSED_BUCKET=processed-data

# ── Metabase ──────────────────────────────────────────────────
MB_DB_TYPE=postgres
MB_DB_DBNAME=metabase
MB_DB_PORT=5432
MB_DB_USER=metabase_user
MB_DB_PASS=change_me_metabase
MB_DB_HOST=postgres

# ── Data Generator ────────────────────────────────────────────
GENERATOR_NUM_ROWS=500
GENERATOR_SEED=42
